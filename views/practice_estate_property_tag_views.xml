<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define an action for viewing property tags -->
    <record id='practice_estate_property_tag_action' model='ir.actions.act_window'>
        <field name='name'>Property tags</field>
        <field name='res_model'>practice.estate.property.tag</field>
        <field name='view_mode'>tree,form</field>
    </record>

    <!-- Define a tree view for property tags -->
    <record id='practice_estate_property_tag_tree_view' model='ir.ui.view'>
        <field name='name'>practice.estate.property.tag.tree</field>
        <field name='model'>practice.estate.property.tag</field>
        <field name='arch' type='xml'>
            <tree string='Tags' editable='bottom'>
                <field name='name'/>
            </tree>
        </field>
    </record>

</odoo>